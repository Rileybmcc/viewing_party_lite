<h1> @user.name </h1>
<%= button_to 'Discover Movies', "/users/#{@user.id}/discover", method: :get %>

<% @user.viewing_parties.each do |party| %>
  <p><%= party.movie_title%></p>
  <p><%= party.date%></p>
  <p><%= party.start_time %></p>
  <br>
  <br>
  <p><%= @user.viewing_party  ViewingPartyUser.find_by(user_id: @user.id, viewing_party_id: party.id).status%></p>

<% end %>
